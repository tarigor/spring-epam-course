<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="client" class="com.epam.spring.beans.Client">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="Igor Taren"/>
    </bean>

    <bean id="eventLogger" class="com.epam.spring.eventLogger.ConsoleEventLogger"/>

    <bean id="app" class="com.epam.spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
        <constructor-arg ref="fileEvent"/>
        <constructor-arg ref="cacheFileEvent"/>
    </bean>

    <bean id="event" class="com.epam.spring.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat"
          factory-method="getDateTimeInstance"/>

    <bean id="fileEvent" class="com.epam.spring.eventLogger.FileEventLogger"
          init-method="init">
        <constructor-arg value="event.txt"/>
    </bean>

    <bean id="cacheFileEvent" class="com.epam.spring.eventLogger.CacheFileEventLogger"
          destroy-method="destroy">
        <property name="cacheSize" value="5"/>
        <constructor-arg value="event.txt"/>
    </bean>


</beans>